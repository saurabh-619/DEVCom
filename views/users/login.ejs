<!-- Header -->
<%- include("../partials/header");  -%>

<!-- Errors in user login and register -->
<%- include('../partials/errors'); -%>

<div class="row login">
  <div class="col-md-6 mx-auto">
    <div class="card card-body mb-2">
      <img src="/images/DevCopy.png" class="img-fluid mylogo" alt="DEV Com logo">
      <h3 class="text-center mt-5 form-heading">Account Login</h3> 
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email" class="mt-5">Email</label>
          <input type="email" name="email" id="email" class="form-control text" required> 
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" id="password" class="form-control text" required> 
        </div>
        <button type="submit" class="btn btn-dark mt-2">Submit</button>
      </form>
    </div>
  </div>
</div>


<!-- Footer -->
<%- include("../partials/footer");  -%>